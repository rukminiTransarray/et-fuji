{% comment %}<style>
/**
 * Registria
 * Standard Registration Template
 * Photoregister Success Email Template
 *
 * Customize the settings below and add your
 * template to admin.
 * 
 * Platform Email Template Attributes:
 *  - Name: "[YOUR_BRAND] Photoregister Success"
 *  - Event Source: "Photoregister"
 *  - Active: checked
 *  - Event: "None"
 *  - From: "[YOUR_BRAND]@photoregister.com"
 *  - Reply-To: "[YOUR_BRAND]@photoregister.com"
 *  - Subject: "Complete your registration now"
 */
</style>{% endcomment %}

{% assign brand_name = "BRAND" %}
{% assign brand_address = "1234 Mile High City, CO, 99999" %}
{% assign brand_url = "http://www.BRAND.com" %}
{% assign brand_email = "brand@photoregister.com" %}
{% assign brand_color = "#71bc37" %}

{% assign form_url = "https://register.brand.com/reg" %}

{% capture cta_text %}
Thank you for using {{ brand_name }} Photoregister. Please click to complete your registration today and receive [insert incentive]...
{% endcapture %}

{% comment %}<style>
/* No edits need to be made beyond this point. */
</style>{% endcomment %}

{% unless photoregister_activity.user == nil %}
    {% assign user = photoregister_activity.user %}
{% endunless %}

{% assign registration = user.registrations.last %}

{% assign reg_id = "" %}
{% assign pr_action = photoregister_activity.photoregister_ruleset.action %}
{% if pr_action == "Register" or pr_action == "register" %}
    {% if registration != nil and photoregister_activity.photoregister_code.product != nil %}
        {% capture reg_id %}/{{ registration.id }}{% endcapture %}
    {% endif %}
{% endif %}

{% assign token = "" %}
{% unless pr_action == "Information" or pr_action == "information" %}
    {% if user.single_access_token != nil and user.single_access_token != "" %}
      {% capture token %}t={{ user.single_access_token }}{% endcapture %}
    {% endif %}
{% endunless %}

{% if photoregister_activity.user == nil %}
    {% capture link_url %}{{ form_url }}{{ reg_id }}?email={{ photoregister_activity.from }}{% endcapture %}
{% elsif user.first_name == nil or user.first_name == "" %}
    {% capture link_url %}{{ form_url }}{{ reg_id }}?{{ token }}&email={{ photoregister_activity.from }}{% endcapture %}
{% else %}
    {% capture link_url %}{{ form_url }}{{ reg_id }}?{{ token }}{% endcapture %}
{% endif %}

{% if user.first_name == nil or user.first_name == "" %}
  {% capture salutation %}Hi there,{% endcapture %}
{% else %}
  {% capture salutation %}Hi {{ user.first_name }},{% endcapture %}
{% endif %}

